<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DisplayDietEnter">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#D50000">
        <TextView
            android:id="@+id/bingonggan"
            android:layout_width="30dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/restaurant"
            android:textSize="22sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:gravity="left"
            android:text="학식 장소 선택"
            android:textColor="@color/white" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/locate" />
        <TextView
            android:id="@+id/textloacte"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:textSize="22sp"
            android:textStyle="bold"
            android:text="이미지를 선택해주세요" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageSanglok1"
                android:layout_width="180dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/newsanglok1" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="@string/FirthFloor" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageSanglok2"
                android:layout_width="180dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/newsanglok2" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="@string/SecondFloor" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageSanglok3"
                android:layout_width="180dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/newsanglok3" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="@string/ThirdFloor" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageDomitory"
                android:layout_width="180dp"
                android:layout_height="150dp"
                app:srcCompat="@drawable/domitory2" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="@string/DormitoryRestaurant" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>